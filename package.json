{
  "name": "blockchain-vesting-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "ng": "ng",
    "dev": "ng serve",
    "dev:host": "ng serve --host 0.0.0.0 --disable-host-check",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:e2e": "cypress open",
    "test:headless": "ng test --watch=false --browsers ChromeHeadless",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "npx lint-staged",
    "stylelint": "stylelint **/*.{css,pcss,less,scss,sass} --quiet-deprecation-warnings",
    "stylelint:fix": "stylelint **/*.{css,pcss,less,scss,sass} --quiet-deprecation-warnings --fix",
    "format": "prettier --write .",
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy.cjs --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.cjs --network sepolia",
    "setup:test": "npx hardhat run scripts/setup-test-data.cjs --network localhost",
    "node": "npx hardhat node",
    "test:contracts": "npx hardhat test"
  },
  "simple-git-hooks": {
    "pre-push": "npm run build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "npm run format"
    ],
    "*.{css,pcss,less,scss,sass}": [
      "npm run stylelint:fix",
      "npm run format"
    ]
  },
  "dependencies": {
    "@angular/animations": "^16.0.0",
    "@angular/common": "^16.0.0",
    "@angular/compiler": "^16.0.0",
    "@angular/core": "^16.0.0",
    "@angular/forms": "^16.0.0",
    "@angular/platform-browser": "^16.0.0",
    "@angular/platform-browser-dynamic": "^16.0.0",
    "@angular/router": "^16.0.0",
    "apexcharts": "^3.44.0",
    "ng-apexcharts": "1.11.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "url": "^0.11.4",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^16.0.1",
    "@angular-devkit/build-angular": "^16.0.1",
    "@angular-eslint/builder": "16.0.1",
    "@angular-eslint/eslint-plugin": "16.0.1",
    "@angular-eslint/eslint-plugin-template": "16.0.1",
    "@angular-eslint/schematics": "16.0.1",
    "@angular-eslint/template-parser": "16.0.1",
    "@angular/cli": "~16.0.1",
    "@angular/compiler-cli": "^16.0.0",
    "@culur/stylelint-config": "^1.2.0",
    "@iconify/json": "^2.2.64",
    "@iconify/tailwind": "^0.1.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^3.0.7",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^5.4.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^5.2.3",
    "@types/jasmine": "~4.3.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.1.3",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.59.2",
    "autoprefixer": "^10.4.14",
    "chai": "^6.2.1",
    "crypto-browserify": "3.12.0",
    "cypress": "^13.1.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.8.0",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^2.3.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "simple-git-hooks": "^2.8.1",
    "solidity-coverage": "^0.8.16",
    "stylelint": "^15.6.1",
    "tailwindcss": "^3.3.2",
    "typescript": "~5.0.2",
    "webpack": "5.78.0"
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false,
    "crypto": false
  }
}
